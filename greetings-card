<body>
    <div class="card">
        <div class="greeting" id="greeting">Hello! Welcome to my site!</div>
        <div class="datetime" id="datetime">Loading time...</div>
    </div>

    <script>
        function updateGreeting() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            };
            const hour = now.getHours();
            let greeting = 'Hello';
            if(hour > 8 && hour < 12) greeting = 'Good Morning';
            else if(hour >= 12 && hour < 18) greeting = 'Good Afternoon';
            else if(hour >= 18 && hour < 24) greeting = 'Good Evening';
            else greeting = "It's past midnight, sleep soon";
            
            document.getElementById('greeting').textContent = greeting;
            document.getElementById('datetime').textContent = now.toLocaleDateString('en-US', options);
        }
        
        updateGreeting();
        setInterval(updateGreeting, 1000);
    </script>
</body>
</html>
